<%= document_icon @document, :format => :medium, :preview => true, :class => :thumb %>
<%= head_label :by, nice_access(@document.access, :company => true) %>
<%= head_label :uploaded_at, nice_date(@document.created_at,:nice,:time_ago => true) %>
<%= head_label :size, nice_size(@document.file_size) %>
<%= head_label :linked, link_to_resource(@document.attachable) if @document.attachable  %>
<%= head_label :category, nice_category(@document.category) %>
