<!DOCTYPE html>
<html>
<head>
  <title>Suh</title>
  <%= stylesheet_link_tag "application", :media => :all %>
  <%= stylesheet_link_tag "print", :media => :print %>
  <%= javascript_include_tag :application %>
  <%= javascript_include_tag :cocoon %>
  <%#= javascript_include_tag :wysiwyg %>
  <%= stylesheet_link_tag :wysiwyg %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
<%#= render "shared/nav" %>
<%= render "shared/me_header" %>
<div id="main">
  <section id="sidebar">
    <%= yield :sidebar %>
  </section>
  <section id="page">
    <%= yield %>
  </section>
</div>
<%= render "shared/footer" %>
<%#= render "shared/notifications", :flash => flash %>
<div id="notify" class="notify notify-top">
  <% if flash[:notice] || flash[:alert] %>
      <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash", :class => "notify-content flash_#{name}" %>
      <% end %>
  <% end %>
</div>
</body>
</html>